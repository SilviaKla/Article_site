<div class="container">
  <div class="row">
    <%= form_with url: articles_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find an article"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
    <% @articles.each do |article| %>
    <div class="cards-index col-12 col-lg-4">
      <%= link_to(article_path(article.id)) do %>
        <div class="card-article mb-5">
          <h2 class="mb-2"><%= article.title %></h2>
          <p><%= "#{article.content.first(150)}..." %></p>
        </div>
      <% end %>
      </div>
      <% end %>
  </div>
</div>
